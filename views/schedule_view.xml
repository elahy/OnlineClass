<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">olclass.schedule.tree</field>
        <field name="model">olclass.schedule</field>
        <field name="arch" type="xml">
            <tree create="1" delete="0">
                <!--                  decoration-success="state == 'done'"-->
                <!--                  decoration-danger="state == 'cancel'" sample="1" multi_edit="1">-->

                <field name="teacher_id" widget="many2one_avatar_user"/>
                <field name="appointment_time" optional="show"/>
                <!--                <field name="state" widget="badge"-->
                <!--                       decoration-success="state == 'done'"-->
                <!--                       decoration-info="state == 'draft'"-->
                <!--                       decoration-warning="state == 'in_consultation'"-->
                <!--                       decoration-danger="state == 'cancel'"/>-->
                <!--                <button name="action_done" type="object" class="fa fa-check btn-success"-->
                <!--                        attrs="{'invisible':[('state', '!=', 'in_consultation')]}"/>-->
                <!--                <button name="%(bm_hospital.action_cancel_appointment)d" type="action"-->
                <!--                        context="{'default_appointment_id': active_id, 'default_reason': 'Unable to attend', 'hide_appointment':1}"-->
                <!--                        class="fa fa-times btn-danger"-->
                <!--                        attrs="{'invisible':[('state', 'not in', ('draft','in_consultation'))]}"-->
                <!--                />-->
                <!--                <field name="progress" widget="progressbar"/>-->
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">olclass.schedule.form</field>
        <field name="model">olclass.schedule</field>
        <field name="arch" type="xml">

            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="teacher_id" widget="many2one_avatar"/>
                            <field name="duration"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_onclass_schedule" model="ir.actions.act_window">
        <field name="name">Schedules</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">olclass.schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first schedule !
            </p>
        </field>
    </record>

    <menuitem id="menu_schedule"
              name="Schedule Details"
              parent="menu_schedule_master"
              action="action_onclass_schedule"
              groups=""
              sequence="0"/>

</odoo>